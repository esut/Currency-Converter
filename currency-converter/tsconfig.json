{
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16", // تأكد من تعيينه إلى Node16
    "moduleResolution": "Node16",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true, // أو يمكنك تعيين emitDeclarationOnly إلى true إذا كنت بحاجة لذلك
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

